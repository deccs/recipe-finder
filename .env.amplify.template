# Environment Variables Template for AWS Amplify
# Copy this file to .env.amplify and fill in your actual values

# Database Configuration
# IMPORTANT: Use PostgreSQL for production, not SQLite
DATABASE_URL="postgresql://username:password@host:port/database"

# NextAuth.js Configuration
NEXTAUTH_SECRET="your-super-secret-nextauth-key-here"
NEXTAUTH_URL="https://your-app-name.amplifyapp.com"

# OAuth Providers (Optional)
# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# AWS Configuration (for GitHub Actions)
AWS_ACCESS_KEY_ID="your-aws-access-key-id"
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"
AWS_REGION="your-aws-region"  # e.g., us-east-1

# AWS Amplify App IDs
AMPLIFY_APP_ID_STAGING="your-staging-app-id"
AMPLIFY_APP_ID_PROD="your-production-app-id"

# Environment-specific URLs
NEXTAUTH_URL_STAGING="https://your-staging-app-name.amplifyapp.com"
NEXTAUTH_URL_PROD="https://your-production-app-name.amplifyapp.com"

# Environment-specific Database URLs (if using separate databases)
DATABASE_URL_STAGING="postgresql://username:password@staging-host:port/database"
DATABASE_URL_PROD="postgresql://username:password@production-host:port/database"

# Environment-specific NextAuth Secrets
NEXTAUTH_SECRET_STAGING="your-staging-nextauth-secret"
NEXTAUTH_SECRET_PROD="your-production-nextauth-secret"